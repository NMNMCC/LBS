{
	"lock": false,
	"compilerOptions": {
		"strict": true,

		"noErrorTruncation": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"strictBindCallApply": true,
		"strictBuiltinIteratorReturn": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true
	},
	"workspace": [
		"./package/*"
	],
	"fmt": {
		"useTabs": true,
		"useBraces": "always",
		"indentWidth": 4,
		"newLineKind": "lf",
		"trailingCommas": "onlyMultiLine"
	},
	"lint": {
		"rules": {
			"exclude": [
				"no-explicit-any",
				"no-namespace"
			]
		}
	},
	"nodeModulesDir": "none",
	"imports": {
		"arktype": "npm:arktype@^2.1.20",
		"hono": "npm:hono@^4.9.4",
		"@effect/cli": "npm:@effect/cli@^0.69.2",
		"@effect/platform-node": "npm:@effect/platform-node@^0.96.0",
		"@std/assert": "jsr:@std/assert@^1.0.14",
		"effect": "npm:effect@^3.17.9",
		"gel": "npm:gel@^2.1.1",
		"swr": "npm:swr@^2.3.6",
		"uuid": "npm:uuid@^11.1.0",
		"zod": "npm:zod@^4.1.3"
	}
}
